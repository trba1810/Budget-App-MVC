@model Transaction
@{
    ViewData["Title"] = "_DeleteModalPartial";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="saveForm" method="post">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Transaction</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="@Model.Id" class="control-label"></label>
                        <input asp-for="@Model.Id" class=" form-control" />
                        <span asp-validation-for="@Model.Id" class="text-danger"></span>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btnCancel" data-dismiss="modal">Close</button>
                    <button id="btnDelete" type="button" class="btn btn-danger" onclick="Delete()">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>